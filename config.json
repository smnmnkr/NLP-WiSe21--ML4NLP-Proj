{
  "data": {
    "train_path": "data/eval.csv",
    "eval_path": "data/eval.csv",
    "test_path": null
  },
  "preprocess": [
    "hyperlinks",
    "mentions",
    "hashtags",
    "retweet",
    "repetitions",
    "emojis",
    "smileys",
    "spaces",
    "punctuation",
    "tokenize"
  ],
  "model": {
    "embedding": {
      "dimension": 32,
      "dropout": 0.3
    },
    "lstm": {
      "hid_size": 64,
      "depth": 3,
      "dropout": 0.3
    },
    "score": {
      "hid_size": 32,
      "dropout": 0.3
    }
  },
  "trainer": {
    "learning_rate": 5e-2,
    "weight_decay": 1e-6,
    "gradient_clip": 60.0,
    "epoch_num": 50,
    "report_rate": 1,
    "batch_size": 96
  }
}