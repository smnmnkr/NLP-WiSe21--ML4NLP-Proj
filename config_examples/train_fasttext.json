{
  "data": {
    "train_path": "data/train.csv",
    "eval_path": "data/eval.csv",
    "test_path": null
  },
  "preprocess": [
    "hyperlinks",
    "mentions",
    "hashtags",
    "retweet",
    "repetitions",
    "emojis",
    "smileys",
    "spaces",
    "punctuation",
    "tokenize"
  ],
  "embedding": {
    "type": "fasttext",
    "config": {
      "data_path": "data/cc.en.300.bin",
      "dimension": 300,
      "dropout": 0.2
    }
  },
  "model": {
    "rnn": {
      "hid_size": 32,
      "depth": 2,
      "dropout": 0.5
    },
    "score": {
      "hid_size": 16,
      "dropout": 0.5
    }
  },
  "trainer": {
    "learning_rate": 1e-3,
    "weight_decay": 1e-5,
    "gradient_clip": 60.0,
    "epoch_num": 150,
    "report_rate": 5,
    "batch_size": 256
  },
  "logging": {
    "path": "results/XX-fasttext/"
  }
}