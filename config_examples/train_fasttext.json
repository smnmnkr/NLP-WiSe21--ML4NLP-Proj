{
  "data": {
    "train_path": "data/train.csv",
    "eval_path": "data/eval.csv",
    "test_path": null
  },
  "preprocess": [
    "hyperlinks",
    "mentions",
    "hashtags",
    "retweet",
    "repetitions",
    "emojis",
    "smileys",
    "spaces",
    "punctuation",
    "tokenize"
  ],
  "embedding": {
    "type": "fasttext",
    "config": {
      "data_path": "data/cc.en.300.bin",
      "dimension": 300,
      "dropout": 0.2
    }
  },
  "model": {
    "rnn": {
      "hid_size": 32,
      "depth": 3,
      "dropout": 0.5
    },
    "score": {
      "hid_size": 16,
      "dropout": 0.5
    }
  },
  "trainer": {
    "epoch_num": 150,
    "batch_size": 256,
    "shuffle": true,
    "optimizer": {
      "lr": 2e-3,
      "weight_decay": 1e-5,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    },
    "stopper": {
      "delta": 1e-3,
      "patience": 10
    },
    "report_rate": 5,
    "log_dir": "results/_tmp/"
  },
  "seed": 42
}