{
  "data": {
    "train_path": "data/train.csv",
    "eval_path": "data/eval.csv",
    "test_path": null
  },
  "preprocess": [
    "hyperlinks",
    "mentions",
    "hashtags",
    "retweet",
    "repetitions",
    "emojis",
    "smileys",
    "spaces",
    "punctuation"
  ],
  "embedding": {
    "type": "bert",
    "config": {
      "model_name": "distilbert-base-cased",
      "dropout": 0.3
    }
  },
  "model": {
    "rnn": {
      "hid_size": 256,
      "depth": 3,
      "dropout": 0.8
    },
    "score": {
      "hid_size": 128,
      "dropout": 0.8
    }
  },
  "trainer": {
    "epoch_num": 160,
    "batch_size": 256,
    "shuffle": true,
    "optimizer": {
      "lr": 2e-3,
      "weight_decay": 1e-5,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    },
    "stopper": {
      "delta": 1e-3,
      "patience": 20
    },
    "report_rate": 5,
    "log_dir": "results/_tmp/"
  },
  "seed": 42,
  "debug": false
}