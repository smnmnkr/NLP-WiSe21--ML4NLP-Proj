{
  "data": {
    "train_path": "data/train.csv",
    "eval_path": "data/eval.csv",
    "test_path": null
  },
  "preprocess": [
    "hyperlinks",
    "mentions",
    "hashtags",
    "retweet",
    "repetitions",
    "emojis",
    "smileys",
    "spaces",
    "punctuation",
    "tokenize"
  ],
  "embedding": {
    "type": "fasttext",
    "config": {
      "data_path": "data/cc.en.300.bin",
      "dimension": 300,
      "dropout": 0.2
    }
  },
  "model": {
    "rnn": {
      "hid_size": 64,
      "depth": 2,
      "dropout": 0.8
    },
    "score": {
      "hid_size": 32,
      "dropout": 0.8
    }
  },
  "trainer": {
    "epoch_num": 60,
    "shuffle": true,
    "batch_size": 128,
    "report_rate": 1,
    "max_grad_norm": 1.0,
    "scheduler_decay": 0.05,
    "optimizer": {
      "lr": 2e-3,
      "weight_decay": 1e-5,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    },
    "stopper": {
      "delta": 1e-3,
      "patience": 20
    }
  },
  "seed": 13,
  "debug": false,
  "log_dir": "experiments/_tmp/"
}